{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build raytracer",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-O2",
        "-g",
        "-I",
        "include",
        "src/*.cpp",
        "-o",
        "raytracer",
        "-pthread"
      ],
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": ["$gcc"]
    }
  ]
}
